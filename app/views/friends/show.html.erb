<div class="card">
  <div class="card-body">
    <h1><%= @friend.first_name %>
    <%= @friend.last_name %>
    </h1>
    <br />
    <h3>This is the details of <%= @friend.first_name %></h3>
    <br />
    <p>
      <strong>Email:</strong>
      <%= @friend.email %>
    </p>
    <p>
      <strong>Phone:</strong>
      <%= @friend.phone %>
    </p>
    <p>
      <strong>Twitter:</strong>
      <%= @friend.twitter %>
    </p>
    <%= link_to 'See More Friends', friends_path, class:"btn btn-success" %>
  </div>
</div>
<br />
<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 
<%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%>
<%= link_to 'Back', friends_path, class:"btn btn-dark" %>
